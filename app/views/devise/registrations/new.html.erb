<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class = "row">
    <div class="input-field col s6">
      <i class="material-icons prefix">account_circle</i>
        <%= f.text_field :firstname, autofocus: true, id: "firstname" %>
      <label for="firstname">First Name</label>
    </div>
    <div class="input-field col s6">
      <%= f.text_field :lastname, autofocus: true, id: "lastname" %>
      <label for="lastname">Last Name</label>
    </div>
  </div>

  <div class = "row">
    <div class = "input-field col s12">
        <i class="material-icons prefix">email</i>
        <%= f.email_field :email, autocomplete: "email", id: "email" %>
        <label for="email">Email</label>
    </div>
    
  </div>

  <div class = "row">
    <div class = "input-field col s12">
        <i class="material-icons prefix">lock</i>
        <%= f.password_field :password, autocomplete: "new-password", id: "password" %>
        <label for="password">Password</label>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
    </div>   
  </div>

  <div class = "row">
    <div class = "input-field col s12">
      <i class="material-icons prefix">lock</i>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation" %>
      <label for="password_confirmation">Password Confirmation</label>
    </div>
  </div>

    <p>
      <label>
        <%= f.check_box :admin %>
        <span>Admin</span>
      </label>
    </p>
  <div class="actions">
    <%= f.submit "Sign up", :class => 'waves-effect waves-light btn' %>
  </div>
<% end %>




<%= render "devise/shared/links" %>
