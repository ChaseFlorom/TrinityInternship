<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class = "row">
    <div class="input-field col s6">
      <i class="material-icons prefix">account_circle</i>
        <%= f.text_field :firstname, autofocus: true, id: "firstname" %>
      <label for="firstname">First Name</label>
    </div>
    <div class="input-field col s6">
      <%= f.text_field :lastname, autofocus: true, id: "lastname" %>
      <label for="lastname">Last Name</label>
    </div>
  </div>

  <div class = "row">
    <div class = "input-field col s12">
        <i class="material-icons prefix">email</i>
        <%= f.email_field :email, autocomplete: "email", id: "email" %>
        <label for="email">Email</label>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class = "row">
    <div class="input-field col s12">
      <i class="material-icons prefix">lock</i>
      <%= f.password_field :password, autocomplete: "new-password", id: "password" %>
      <label for="password">New Password (Leave blank if you don't want to change your password)</label>
    </div>
  </div>
  
  <div class = "row">
    <div class="input-field col s12">
      <i class="material-icons prefix">lock</i>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation" %>
      <label for="password_confirmation">New Password Confirmation (Leave blank if you don't want to change your password)</label>
    </div>
  </div>


  <div class = "row">
    <div class="input-field col s12">
      <i class="material-icons prefix">lock</i>
      <%= f.password_field :current_password, autocomplete: "new-password", id: "current_password" %>
      <label for="current_password">Please confirm your password to make any changes to your profile</label>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn waves-effect waves-light" %>
  </div>
<% end %>


<div class = "xtramargintop">
  <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
</div>

