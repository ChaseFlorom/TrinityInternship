<p align = "right">
  <%if current_user.role == "teacher" || current_user.admin == true%>
    <%=link_to "Create Unit", new_unit_path, class: "waves-effect waves-light btn-small blue"%>
  <%end%>
</p>

<h2 align = "center">UNITS</h2>


<div class="row">
    <% @units.each do |unit| %>
        <div class="col s12 m4">
          <div class="card">
            <div class="card-image">
              <%= link_to image_tag("office.jpg"), unit_path(unit.id) %>
            </div>
            <div class="card-content">
                <span class="card-title black-text"><%=link_to unit.name, unit_path(unit.id)%></span>

            </div>
            <div class="card-action">
              <%=link_to "Open Class", unit_path(unit.id)%>
              <%=link_to "Delete Class", unit_path(unit.id), method: :delete, data: {confirm: "Are you sure you want to delete this unit?"}, class: 'red-text'%>
            </div>
          </div>
        </div>
    <%end%>
</div>
<div align = "center">
    <%= will_paginate @users %>
</div>
