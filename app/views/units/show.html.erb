<h2 align = "center"><%=@unit.name%></h2>
<p align = "right">
  <%=link_to "Create Assignment", new_assignment_path(unit_ids: @unit.id), class: "waves-effect waves-light btn-small blue"%>
</p>

  <ul class="collapsible">
    <% @assignments.each do |assignment| %>
    <li>
      <div class="collapsible-header"><i class="material-icons">assignment</i><%=assignment.name%></div>
      <div class="collapsible-body"><p class = "lime-text text-darken-2">Due <%=assignment.duedate.to_formatted_s(:short)%></p><span><%=assignment.description%></span></div>
    </li>
    <%end%>
  </ul>