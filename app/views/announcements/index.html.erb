<h4 align = "center"> Announcements </h4>

<%@announcements.each do |announcement|%>
  <%@user = User.find(announcement.user_id)%>
  <div class="col s12 m12">
    <div class="card fill-width">
      <div class="card-content">
        <span class="card-title"><div class = "line-height"><i class="material-icons circle">account_circle</i><%=link_to @user.fullname, user_path(@user.id)%></div></span>
      <%=announcement.content%>
      </div>
      <%if current_user.role == "teacher"%>
        <div class="card-action">
          <%=link_to "Delete Announcement", announcement_path(announcement.id), method: :delete, data: {confirm: "Are you sure you want to delete this announcement?"}, class: 'red-text'%>
        </div>
      <%end%>
    </div>

  </div>
<%end%>