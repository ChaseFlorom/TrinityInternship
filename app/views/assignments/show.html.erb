
<h2 align = "center"><%=@assignment.name%></h2>
<p><%=@assignment.description%></p>

<%if @submissions.size >0%>
    <% @submissions.each do |submission| %>
        <div class="row">
            <div class="col s12 m12">
              <div class="card fill-width">
                <div class="card-content">
                  <span class="card-title"><%=submission.user.firstname%></span>
                  <p><%=submission.content%></p>
                </div>
                <div class="card-action">
                  <%=link_to "Delete Submission", submission_path(submission.id), method: :delete, data: {confirm: "Are you sure you want to delete this submission?"}, class: 'red-text'%>
                </div>
                
              </div>
            </div>
        </div>
    <%end%>
<%else%>
    <%= render 'submissions/form'%> 
<%end%>