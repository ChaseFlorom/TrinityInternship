<div class = " commentbox" id = "commentbox">
  <%= form_with model: @comment do |form| %>
    <div class="field bullet">
      <%= form.label "Submission" %>
      <%= form.rich_text_area :commentText %>
      <%= form.text_field :submission_id, value: @comment.submission_id, class: 'hidden' %>
    </div>
    <div class="form-group" id="submitbutton">
      <div align = "center">
          <%= form.submit "Edit Comment",  class: "btn waves-effect waves-light" %>
      </div>
    </div>
  <% end %>            
</div>